<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusable="true"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:clickable="true"
              android:orientation="vertical"
              android:background="@android:color/holo_green_light">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Name of the ship :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView24" android:layout_weight="1"/>
        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameship" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="23dp">
        <TextView
                android:text="Model :"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:id="@+id/textView25" android:layout_weight="1"/>
        <TextView
                android:text="model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/model" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">
        <TextView
                android:text="Distance du port :"
                android:layout_width="30dp"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                android:baselineAligned="false"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/distance" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="43dp">
        <Button
                android:text="CALCULER DISTANCE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button4"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="43dp">
        <Button
                android:text="AFFICHER LE BATEAU SUR MAPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_showMap"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="43dp">
        <Button
                android:text="MODIFIER LE BATEAU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_modify"/>

    </LinearLayout>

</LinearLayout>